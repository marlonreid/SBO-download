{
  "manifest_version": 2,

  "name": "Safari Books Getter",
  "description": "",
  "version": "1.1",

  "background": {
    "scripts": ["bluebird.js", "jszip.js", "event_page.js", "ejs.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Get current book!"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "pageCapture"
  ]
}
